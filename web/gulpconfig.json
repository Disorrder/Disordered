{
    "path": {
        "bower": "./",
        "app": "./app/",
        "build": "./.build/"
    },
    "filters": {
        "scripts": "**/*.js",
        "styles": "**/*.styl",
        "templates": "**/*.jade",
        "index": "index.jade",
        "images": "**/*.{png,svg,gif,jpg,jpeg,ico}",
        "fonts": "**/*.{eot,svg,ttf,woff,woff2}"
    },
    "excludePrefix": "__",
    "usemin": true,
    "hashLength": 6,
    "webserver": {
        "https": false,
        "hostname": "localhost",
        "host": "0.0.0.0",
        "port": 18000,
        "open": true,
        "livereload": true
    },
    "ignore": [
        "**/mixins/**/*.{jade,styl}"
    ],
    "bowerOverrides": {
        "font-awesome": {
            "main": [
                "css/font-awesome.css",
                "fonts/fontawesome-webfont.eot",
                "fonts/fontawesome-webfont.svg",
                "fonts/fontawesome-webfont.ttf",
                "fonts/fontawesome-webfont.woff",
                "fonts/FontAwesome.otf"
            ]
        },
        "ng-file-upload-shim": {
            "main": "ng-file-upload-all.js"
        }
    }
}
