doctype html 5
html(ng-app="app")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, height=device-height" )
        meta(name="viewport", content="initial-scale=1, user-scalable=no")
        title Disordered site
        //- link(rel="icon" href="/images/favicon.png" sizes="128x128")
        each style in bower.css
            link(rel="stylesheet", href="/" + style.relative.replace(/\\/g, '/'))
        link(rel="stylesheet", href="/styles/main.css")
        if buildmode == "jspm"
            script(src="./jspm_packages/system.js")
            script(src="./config.js")
            script System.import('./application/Application')
        else
            each script in bower.js
                script(src= "/" + script.relative.replace(/\\/g, '/'))
            each script in files.js
                script(src= "/" + script.relative.replace(/\\/g, '/'))
    body
        //- include application/components/navbar/navbar
        div.viewport(ui-view="", ng-cloak)
